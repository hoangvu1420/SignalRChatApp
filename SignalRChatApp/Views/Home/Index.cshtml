@{
	ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
	<div id="userForm" class="card p-4">
		<h2 class="text-center mb-4">Register or Login</h2>
		<div class="mb-3">
			<input type="text" class="form-control" id="usernameInput" placeholder="Enter username" />
		</div>
		<div class="d-flex justify-content-between">
			<button id="registerButton" class="btn btn-primary w-100 me-2">Register</button>
			<button id="loginButton" class="btn btn-success w-100 ms-2">Login</button>
		</div>
	</div>

	<div id="chatInterface" class="card p-4 mt-4" style="display: none;">
		<h2 class="text-center mb-4">Global Chat</h2>
		<!-- Chat Window -->
		<div id="msg_feed" class="border p-3 mb-3 chat-window" style="height: 60vh; overflow-y: auto;">
			<!-- Message Feed -->
		</div>

		<!-- Message Input -->
		<div class="d-flex">
			<input id="msg_input" type="text" class="form-control" placeholder="Type your message...">
			<button id="send_btn" class="btn btn-primary ms-2">Send</button>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/chat.js"></script>
	<script src="~/js/globalChat.js"></script>
}