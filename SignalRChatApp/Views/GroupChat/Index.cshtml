@{
    ViewData["Title"] = "Group Chat";
}

<body>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar - Group List -->
        <aside class="col-md-3 col-lg-2 bg-light border-end d-flex flex-column" style="height: 90vh;">
            <ul id="group-list" class="list-group list-group-flush flex-grow-1 overflow-auto">
                <!-- Group Item -->
            </ul>
            <button id="create-group-btn" class="btn btn-primary mt-2">+ Create New Group</button>
        </aside>

        <!-- Main Chat Area -->
        <main id="chatInterface" class="col-md-9 col-lg-10 p-3 d-flex flex-column" style="height: 90vh;">
            <!-- Group Information -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 id="group-name"  class="h5">
                        <!-- Group Name will be populated dynamically -->
                    </h2>
                    <p class="text-muted">
                        Latest activity: <span id="group-latest-activity">
                            <!-- Latest activity will be populated dynamically -->
                        </span>
                    </p>
                </div>
            </div>

            <!-- Chat Window -->
            <div id="msg_feed" class="border p-3 mb-3 chat-window" style="height: 60vh; overflow-y: auto;">
                <!-- Message Feed will be populated dynamically -->
            </div>

            <!-- Message Input -->
            <div class="d-flex">
                <input id="msg_input" type="text" class="form-control" placeholder="Type your message...">
                <button id="send_btn" class="btn btn-primary ms-2">Send</button>
            </div>
        </main>
    </div>
</div>

<!-- Create Group Modal -->
<div class="modal fade" id="createGroupModal" tabindex="-1" aria-labelledby="createGroupModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createGroupModalLabel">Create New Group</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="text" class="form-control" id="groupNameInput" placeholder="Enter group name">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="confirmCreateGroup">Create</button>
      </div>
    </div>
  </div>
</div>

</body>

@section Scripts {
	<script src="~/js/chat.js"></script>
    <script src="~/js/groupChat.js"></script>
}